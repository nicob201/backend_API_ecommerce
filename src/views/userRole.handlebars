<div class="container mt-5">
    <h3>Users Panel:</h3>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        {{#each users}}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">User Email: {{this.email}}</h5>
                    <p class="card-text"><strong>Actual Role:</strong> {{this.role}}</p>
                    <p class="card-text"><strong>User ID:</strong> {{this._id}}</p>
                    <p class="card-text"><strong>Last connection:</strong> {{this.last_connection}}</p>
                    <p class="card-text"><strong>Change Role To:</strong></p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role-{{this._id}}" id="role-user-{{this._id}}" value="user" {{#if (eq this.role 'user')}}checked{{/if}}>
                        <label class="form-check-label" for="role-user-{{this._id}}">
                            User
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role-{{this._id}}" id="role-admin-{{this._id}}" value="admin" {{#if (eq this.role 'admin')}}checked{{/if}}>
                        <label class="form-check-label" for="role-admin-{{this._id}}">
                            Admin
                        </label>
                    </div>
                    <button class="btn btn-primary mt-3 confirm-role-change" data-id="{{this._id}}">Confirm Changes</button>
                    <button class="btn btn-danger mt-3 delete-user" data-id="{{this._id}}">Delete User</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../public/js/users.js"></script>
<script src='../public/js/products.js'></script>
